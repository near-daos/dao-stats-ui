{
  "name": "dao-stats-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "1.6.2",
    "axios": "0.24.0",
    "clsx": "1.1.1",
    "connected-react-router": "6.9.1",
    "downshift": "6.1.7",
    "lodash": "4.17.21",
    "normalize.css": "8.0.1",
    "react": "17.0.1",
    "react-countdown": "2.3.2",
    "react-dom": "17.0.1",
    "react-redux": "7.2.3",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "react-select": "5.1.0",
    "recharts": "2.1.6",
    "redux": "4.0.5",
    "redux-toolkit": "1.1.2",
    "reselect": "4.0.0",
    "svg-sprite": "1.5.0",
    "web-vitals": "1.0.1",
    "history": "4.10.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.4",
    "@testing-library/react": "11.1.0",
    "@testing-library/user-event": "12.1.10",
    "@types/jest": "26.0.15",
    "@types/lodash": "4.14.170",
    "@types/node": "12.0.0",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-router-dom": "5.1.7",
    "@types/react-select": "5.0.1",
    "@types/webpack-env": "1.16.0",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "css-module-types": "0.2.2",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "5.1.3",
    "lint-staged": "10.5.4",
    "node-sass": "4.14.1",
    "prettier": "2.1.2",
    "react-scripts": "4.0.3",
    "redux-devtools-extension": "2.13.9",
    "stylelint": "13.12.0",
    "stylelint-config-css-modules": "2.3.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.0.0",
    "typescript": "4.1.2",
    "typescript-plugin-css-modules": "2.8.0"
  },
  "scripts": {
    "start": "yarn generate-assets-index & yarn build-svg-sprite & react-scripts start",
    "build": "yarn generate-assets-index & yarn build-svg-sprite & react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "commit": "cz",
    "prettier": "prettier --write \"./**/*.{ts,tsx,js,jsx,css,scss,html}\"",
    "lint": "tsc --noEmit && eslint --cache --max-warnings=0 src/**/*.ts{,x} && stylelint --cache -f verbose \"**/*.scss\"",
    "lint:scss": "stylelint --cache -f verbose \"**/*.scss\"",
    "lint:fix": "npm run lint -- --fix",
    "postinstall": "yarn generate-assets-index",
    "generate-assets-index": "node scripts/generateAssetsIndex.js",
    "build-svg-sprite": "svg-sprite -s --symbol-sprite=sprite-icons.svg --symbol-dest= --dest=public src/icons/*.svg",
    "prepare": "husky install"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "bitbucket:magicpowered/dao-stats-ui"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --quiet --syntax=scss --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
